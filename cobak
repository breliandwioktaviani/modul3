    <script>
        function showAlert(imageName) {
            alert("Anda mengklik gambar: " + imageName);
        }

        function changeImageOpacity(img) {
            img.style.opacity = "0.5";
        }

        function resetImageOpacity(img) {
            img.style.opacity = "1";
        }
    </script>
